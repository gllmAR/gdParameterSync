# Example configuration using clean @export syntax
# This gets parsed into gdParameterSync parameters automatically

@export_group("Audio Settings")
@export var master_volume: float = 0.8 ## Master Volume: 0.0 to 1.0 | step: 0.01
@export var music_volume: float = 0.6 ## Music Volume: 0.0 to 1.0 | step: 0.01
@export var sound_enabled: bool = true ## Enable Sound Effects

@export_group("Video Settings")
@export var screen_resolution: int = 1 ## Resolution: 0 to 3 | labels: 720p,1080p,1440p,4K
@export var fullscreen: bool = false ## Fullscreen Mode
@export var vsync: bool = true ## Vertical Sync
@export var brightness: float = 1.0 ## Brightness: 0.5 to 1.5 | step: 0.1

@export_group("Game Settings")
@export var player_name: String = "Player" ## Player Name
@export var difficulty: int = 1 ## Difficulty: 0 to 2 | labels: Easy,Normal,Hard

@export_group("Polygon Demo")
@export var sides: int = 6 ## Number of sides: 3 to 12 | step: 1
@export var fill_color: Color = Color(0.2, 0.6, 0.8, 1.0) ## Fill Color
@export var line_color: Color = Color.WHITE ## Line Color
@export var line_width: float = 2.0 ## Line Width: 0.0 to 10.0 | step: 0.1
@export var position: Vector2 = Vector2(400, 300) ## Position: 0,0 to 800,600
